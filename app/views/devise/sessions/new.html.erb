<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'pure-form' }) do |f| %>
  <fieldset class="pure-group">
  <div class="field">
    <%= f.email_field :email, placeholder: "Email", autofocus: true %>
    <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="remember_me">
      <div class="remember_me_check_box">
        <%= f.check_box :remember_me %>
      </div>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>
  </fieldset>
<%= render "devise/shared/links" %>
